<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/report_img"
    tools:context=".Report">


    <!--    <Button-->
<!--        android:id="@+id/button2"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="return"-->
<!--        android:background="@drawable/rounded_btn"-->
<!--        tools:layout_editor_absoluteX="0dp"-->
<!--        tools:layout_editor_absoluteY="27dp" />-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/report_ic" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp">


        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="173dp"
                android:layout_height="33dp"
                android:fontFamily="@font/boldfont"
                android:text="Create a Report"

                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/report_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.197"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.735" />

            <EditText
                android:id="@+id/report_title"
                android:layout_width="211dp"
                android:layout_height="47dp"
                android:background="@drawable/round_btn_blue"
                android:fontFamily="@font/lightfont"
                android:hint="Title"
                android:padding="10dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.244"
                tools:paddingBottom="60dp" />

            <EditText
                android:layout_width="211dp"
                android:layout_height="20dp"
                android:background="@drawable/round_btn_blue"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.244" />

            <EditText
                android:id="@+id/report_content"
                android:layout_width="270dp"
                android:layout_height="141dp"
                android:background="@drawable/round_btn_blue"
                android:fontFamily="@font/lightfont"
                android:gravity="top"
                android:hint="Content"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.501" />

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="submit"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                >

            </Button>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <include layout="@layout/activity_base_menu"></include>


</androidx.constraintlayout.widget.ConstraintLayout>